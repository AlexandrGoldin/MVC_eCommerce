@model MVC_eCommerce.Models.Admin.ProductVM


@{
    ViewBag.Title = "ProductDelete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="../Admin/Products">Products</a></li>
        <li class="breadcrumb-item active">ProductDelete</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Delete Product
        </div>
        <hr />
        @if (TempData["SM"] != null)
        {
            <div class="alert alert-success">
                @TempData["SM"]
            </div>
        }
        <div class="card-body">
            <div class="ProductName">
                @Html.LabelFor(model => model.ProductName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-8">
                    @Html.DisplayFor(model => model.ProductName, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <br />
            <div class="col-md-8 ProductImage">
                <img class="img-responsive" title="Click to View Product detail"
                     style="cursor:pointer;height:220px;width:220px"
                     src="~/ProductImg/@Model.ProductImage" />
            </div>
            <br />
            <div class="table table-bordered">
                <table id="datatables">
                    <thead>
                        <tr>
                            <th scope="col">CategoryId</th>
                            <th scope="col">CategoryName</th>
                            <th scope="col">IsDelete</th>
                            <th scope="col">IsFeatured</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.CategoryId</td>
                            <td>@Model.CategoryName</td>
                            <td>@Model.IsDelete</td>
                            <td>@Model.IsFeatured</td>
                            <td>@Model.Quantity</td>
                            <td>@Model.Price</td>
                        </tr>
                    <tbody>
                </table>
            </div>
            <br />
            <div class="col-md-12">
                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.Description, new { @class = "form-control", @cols = 35, @rows = 5 })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col">
                    @Html.ActionLink("Cansel", null, null, null, new { href = Request.UrlReferrer, @class = "btn btn-danger" })
                </div>
                <div class="col">

                    @using (Html.BeginForm())
                    {                       
                        <input type="submit" value="Delete" class="btn btn-primary" />
                    }
                </div>
            </div>
        </div>
    </div>

</div>


