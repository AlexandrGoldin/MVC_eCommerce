@model MVC_eCommerce.Models.Account.EmploeeVM
@using System.Web;

@{
    ViewBag.Title = "Create  Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="class row">
        <div class="col-md-4 col-sm-3 col-xs-2">
        </div>
        <div class="col-md-4 col-sm-6 col-xs-8 well">
            <h2 style="text-align: center">Create Account</h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-10", @style = "text-align:left" })
                            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                            <br>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "control-label col-md-10", @style = "text-align:left" })
                            @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", @placeholder = "123-456-7890" } })
                            @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                            <br>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2", @style = "text-align:left" })
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control", id = "myInput" })
                            <input type="checkbox" onclick="myFunction()">Show Password
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            <br><br>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "control-label col-md-12", @style = "text-align:left" })
                            @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                            <br>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col text-center ">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/Content/ShopJS/ShowPassword.js"></script>
}

