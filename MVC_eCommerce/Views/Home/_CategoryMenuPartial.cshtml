@model IEnumerable<MVC_eCommerce.Models.Admin.CategoryVM>

<div class="dropdown">
    <button class="btn btn-warning btn-lg dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Catalog
    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <ul class="nav nav-pills nav-stacked">
            <li><a class="" href="/home/Index">All Categories</a></li>

            @foreach (var item in Model)
            {
                <li><a class="" href="/home/Index?catId=@item.Id">@item.CategoryName</a></li>
            }
        </ul>
    </div>
</div>




